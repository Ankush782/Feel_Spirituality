                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Language"
                android:layout_margin="15dp"
                android:id="@+id/language"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdhgdsz"
                android:id="@+id/data"
